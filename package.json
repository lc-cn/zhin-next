{
  "name": "zhin-next",
  "version": "1.0.0",
  "description": "TypeScript机器人框架",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm --filter test-bot dev",
    "start": "pnpm --filter @zhin/bot start",
    "daemon": "pnpm --filter @zhin/bot daemon",
    "stop": "pnpm --filter @zhin/bot stop",
    "init": "pnpm --filter @zhin/bot initial && pnpm install",
    "build": "pnpm -r build",
    "clean": "pnpm -r clean",
    "lint": "eslint . --ext .ts,.tsx",
    "type-check": "tsc --noEmit",
    "link": "pnpm --filter @zhin/cli exec npm link",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.10.0",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "cross-spawn": "^7.0.3",
    "fs-extra": "^11.1.1",
    "inquirer": "^9.2.12",
    "ora": "^7.0.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}