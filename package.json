{
  "name": "zhin-next",
  "version": "1.0.0",
  "description": "TypeScript机器人框架",
  "private": true,
  "type": "module",
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "workspaces": [
    "adapters/*",
    "packages/*",
    "plugins/*"
  ],
  "packageManager": "pnpm@9.0.2",
  "scripts": {
    "dev": "pnpm --filter test-bot dev",
    "start": "pnpm --filter test-bot start",
    "daemon": "pnpm --filter test-bot daemon",
    "release": "pnpm changeset",
    "bump": "pnpm changeset version",
    "pub": "pnpm -r publish --access public --no-git-checks --registry https://registry.npmjs.org",
    "stop": "pnpm --filter test-bot stop",
    "init": "pnpm --filter test-bot initial && pnpm install",
    "build": "pnpm -r build",
    "clean": "pnpm -r clean",
    "lint": "eslint . --ext .ts,.tsx",
    "type-check": "tsc --noEmit",
    "link": "pnpm --filter @zhin.js/cli exec npm link",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "create": "node packages/create-zhin/dist/index.js",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "devDependencies": {
    "@types/node": "^24.2.1",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "@vitest/coverage-v8": "^1.2.1",
    "eslint": "^9.33.0",
    "typescript": "^5.9.2",
    "vitepress": "^1.6.4",
    "vitest": "^1.2.1",
    "vue": "^3.5.18"
  },
  "dependencies": {
    "chalk": "^5.5.0",
    "commander": "^14.0.0",
    "@changesets/cli": "^2.27.7",
    "cross-spawn": "^7.0.6",
    "fs-extra": "^11.3.1",
    "inquirer": "^12.9.2",
    "ora": "^8.2.0"
  }
}